{{!-- TODO: move legend into own component--}}
{{#if showGraphLegend}}
  <div class="left-panel">
    <div class="anomaly_graph__filters">
      <h5 class="legend-title">Primary Metric</h5>
      <ul class="anomaly-graph__filter-group">
        <li class="anomaly-graph__filter-item">
          {{input type="checkbox" id=(concat "metric-" metric.id) checked=true click=(action "onSelection" anomaly)}}
          {{!--{{input type="checkbox" id="primary-metric" checked=true click=(action "onSelection" anomaly)}} {{anomaly.anomalyFunctionName}}--}}
          <label class="anomaly-graph__filter-label" for="metric-{{primaryMetric.id}}"> {{primaryMetric.metricName}} </label>
        </li>
      </ul>
      <h5 class="legend-title">Related Metrics</h5>
      <ul class="anomaly-graph__filter-group">
      {{#each relatedMetrics as |metric index|}}
        <li class="anomaly-graph__filter-item">{{input type="checkbox" id=(concat "related-metric-" index) checked=metric.isSelected}}
        {{!--<div class="anomaly-graph__filter-item">{{input type="checkbox" id=(concat "related-metric-" index) checked=false}}--}}
          <label class="anomaly-graph__filter-label" for="related-metric-{{index}}"> {{metric.metricName}} </label>
        </li>
      {{else}}
        No Related Metrics.
      {{/each}}
      </ul>
    </div>
  </div>
{{/if}}

<div class="right-panel">
  {{#unless showGraphLegend}}
    <h5>{{primaryMetric.metricId}} {{primaryMetric.metricName}}</h5>
  {{/unless}}
  {{thirdeye-chart 
    data=data 
    axis=axis 
    legend=legend
    regions=regions
    size=size
    color=color
    zoom=zoom
    point=point
    subchart=subchart}}
</div>