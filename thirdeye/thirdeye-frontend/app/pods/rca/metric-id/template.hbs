Search for Metric:
{{#power-select 
  selected=primaryMetric
  onchange=(action "onMetricChange")
  search=(perform searchMetrics)
  searchPlaceholder="Search for a metric"
  as |metric|
}}
  {{metric.alias}}
{{/power-select}}

{{#if primaryMetric}}
  {{date-range-picker
    label="Date Range"
    start=startDate
    end=EndDate
    timePicker=true
  }}

  {{#power-select
    selected=selecteGranularity
    options=granularities
    onchange=(action "onGranularityChange") 
    as |granularity|
  }}
    {{granularity}}
  {{/power-select}}

  {{#power-select-multiple
    options=filterOptions
    placeholder="Select Filters"
    onchange=(action "onGranularityChange") 
    as |filter|
  }}
    {{filter}}
  {{/power-select-multiple}}

{{/if}}

{{outlet}}
